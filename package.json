{
	"name": "opencode-branch-name",
	"version": "0.1.0",
	"description": "OpenCode plugin that displays Git project name and branch in the TUI prompt",
	"author": "",
	"license": "MIT",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/yourusername/opencode-branch-name.git"
	},
	"homepage": "https://github.com/yourusername/opencode-branch-name#readme",
	"bugs": {
		"url": "https://github.com/yourusername/opencode-branch-name/issues"
	},
	"files": ["dist"],
	"scripts": {
		"build": "bun build src/index.ts --outdir dist --target node",
		"prepublishOnly": "bun run build",
		"typecheck": "tsc --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write ."
	},
	"keywords": ["opencode", "opencode-plugin", "git", "branch", "prompt"],
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@opencode-ai/plugin": "^1.1.12",
		"@types/node": "^25.0.6",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"@opencode-ai/plugin": ">=1.0.0"
	},
	"trustedDependencies": ["@biomejs/biome"]
}
